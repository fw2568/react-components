{
  "name": "@hashicorp/react-components",
  "version": "0.0.0",
  "dependencies": {
    "@hashicorp/mktg-global-styles": "^3.0.1",
    "@hashicorp/mktg-logos": "^1.0.2",
    "@hashicorp/nextjs-scripts": "^18.2.1",
    "classnames": "^2.3.1",
    "next": "^10.1.3",
    "next-remote-watch": "^1.0.0",
    "node-cache": "^5.1.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "swingset": "0.7.3"
  },
  "devDependencies": {
    "@octokit/core": "^3.4.0",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^13.1.5",
    "@types/react": "^17.0.4",
    "dotenv": "^8.2.0",
    "eslint": "^7.25.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "regenerator-runtime": "^0.13.7",
    "simple-git-hooks": "^2.4.1"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "next-hashicorp format",
      "next-hashicorp lint"
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "bs": "npm run bootstrap",
    "hard-reset": "rm -rf node_modules && rm -rf .next && lerna clean -y && npm i && npm run bs",
    "lint": "next-hashicorp lint",
    "release": "npm run release:check-branch && npm run release:check-auth && lerna publish",
    "release:canary": "npm run release:check-auth && lerna publish --dist-tag=next --canary",
    "release:canary-force": "npm run release:check-auth && lerna publish --preid=next --canary --force-publish",
    "release:check-auth": "./scripts/release-check-npm-auth.sh",
    "release:check-branch": "./scripts/release-check-branch.sh",
    "start": "next-remote-watch \"./packages/*/{docs.mdx,props.js}\"",
    "test": "jest",
    "test:ci": "jest --runInBand",
    "test:watch": "jest --watch",
    "upgrade:base-deps": "npm add @hashicorp/{mktg-{logos,global-styles},nextjs-scripts}@latest",
    "vercel-build": "npm run bootstrap && next build"
  },
  "simple-git-hooks": {
    "pre-commit": "lint-staged"
  },
  "workspaces": [
    "./packages/*"
  ],
  "private": true
}
